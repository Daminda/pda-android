<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW BOOK"
        android:id="@+id/addBookDialogTitle"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextBookTitle"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBookTitle"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/primarydark"
        android:editable="true"
        android:enabled="true"
        android:hint="title"

        android:layout_below="@+id/addBookDialogTitle"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/editTextBookTitle"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextTotalPages"
            android:layout_weight="1"
            android:hint="total pages"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextCurrentPage"
            android:layout_weight="1"
            android:hint="current page"
            />
    </LinearLayout>

</RelativeLayout>