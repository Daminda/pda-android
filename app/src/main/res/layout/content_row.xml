<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"

    android:layout_height="72dp"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/contentIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        />
    <!--
    <TextView
        android:id="@+id/contentCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_section1"
        android:textColor="@android:color/black"
        android:layout_marginLeft="72dp"
        />
    -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"

        >
            <TextView
                android:id="@+id/contentCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:gravity="center_vertical|left"
                android:text="LUCY"
                />


        <TextView
                android:id="@+id/contentDescription"
                android:layout_below="@id/contentCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:visibility="visible"
                android:layout_gravity="fill_horizontal"
                android:text="test description"

                />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@id/contentDescription"
            android:layout_alignLeft="@id/contentCaption"
            android:layout_alignParentStart="true"
            android:progress="50"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="test"
            android:textSize="13dp"
            android:id="@+id/textViewType"
            android:layout_below="@+id/progressBar"
            android:textColor="@color/pink"
            android:gravity="top|center_vertical" />


    </RelativeLayout>


</LinearLayout>