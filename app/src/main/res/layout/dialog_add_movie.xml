<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW MOVIE"
        android:id="@+id/textViewDialogTitle"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editTextBookTitle"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextImdbId"
        android:layout_below="@+id/textViewDialogTitle"
        android:layout_alignParentStart="true"
        android:hint="imdb id"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMovieTitle"
        android:layout_below="@+id/editTextImdbId"
        android:layout_alignEnd="@+id/editTextImdbId"
        android:hint="title"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/editTextMovieTitle"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextDuration"
            android:layout_weight="1"
            android:hint="duration"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextCurrentTime"
            android:layout_weight="1"
            android:hint="current time"
            />
    </LinearLayout>
</RelativeLayout>